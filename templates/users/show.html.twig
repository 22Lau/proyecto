{% extends 'base.html.twig' %}

{% block title %}Users{% endblock %}

{% block body %}
    <h1>Users</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Username</th>
                <td>{{ user.username }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>
            <tr>
                <th>Role</th>
                <td>{{ user.role }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ user.name }}</td>
            </tr>
            <tr>
                <th>LastName</th>
                <td>{{ user.lastName }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>EntryTime</th>
                <td>{{ user.entryTime ? user.entryTime|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>ExitTime</th>
                <td>{{ user.exitTime ? user.exitTime|join(', ') : '' }}</td>
            </tr>
            <tr>
                <th>Stops</th>
                <td>{{ user.stops ? user.stops|join(', ') : '' }}</td>
            </tr>
            <tr>
                <th>Vacations</th>
                <td>{{ user.vacations }}</td>
            </tr>
            <tr>
                <th>Workshops</th>
                <td>{{ user.workshops ? user.workshops|join(', ') : '' }}</td>
            </tr>
            <tr>
                <th>Documents</th>
                <td>{{ user.documents ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>ReceiveNotifications</th>
                <td>{{ user.receiveNotifications }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_users_index') }}">back to list</a>

    <a href="{{ path('app_users_edit', {'id': user.id}) }}">edit</a>

    {{ include('users/_delete_form.html.twig') }}
{% endblock %}
